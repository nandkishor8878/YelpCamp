<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead campground-author">Submited By: <a href="/profile"><%= campground.author.username %></a></p>
            <div class="dropdown">
                <a id="my-campground" href="#" class="btn btn-success dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">My Campgrounds <span class="caret"></span></a>
                <ul class="dropdown-menu dropdown-menu-list">
                <li><a href="#">list item 1</a></li>
